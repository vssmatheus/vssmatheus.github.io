{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "arrowParens": "avoid",
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "trailingComma": "none",
        "arrowParens": "always"
      }
    },
    {
      "files": "*.css",
      "options": {
        "singleQuote": false
      }
    }
  ]
}